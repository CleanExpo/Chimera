# =============================================================================
# CHIMERA WEB APP - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your values
# For Vercel deployment, add these in the Vercel Dashboard > Settings > Environment Variables

# =============================================================================
# REQUIRED - Core Services
# =============================================================================

# Supabase - Database & Auth
# Get from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Backend API URL
# For local dev: http://localhost:8888
# For production: your deployed backend URL (Railway, Render, Fly.io, etc.)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8888
BACKEND_URL=http://localhost:8888
BACKEND_API_KEY=your-internal-api-key

# =============================================================================
# REQUIRED FOR AI FEATURES
# =============================================================================

# Anthropic Claude API
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxx

# Model Configuration
ANTHROPIC_ORCHESTRATOR_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_WORKER_MODEL=claude-sonnet-4-5-20250929

# =============================================================================
# OPTIONAL - Enhanced Features
# =============================================================================

# Google Gemini (for multi-agent)
# Get from: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=xxx

# EXA Search (for agent web search)
# Get from: https://exa.ai/
EXA_API_KEY=xxx

# GitHub Integration
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxx
NEXT_PUBLIC_GITHUB_CLIENT_ID=xxx
GITHUB_CLIENT_SECRET=xxx

# =============================================================================
# OPTIONAL - Observability
# =============================================================================

# Langfuse (LLM tracing)
# Get from: https://langfuse.com/
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx
LANGFUSE_HOST=https://cloud.langfuse.com

# Sentry (error tracking)
# Get from: https://sentry.io/
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# =============================================================================
# LOCAL DEVELOPMENT ONLY
# =============================================================================
# These features only work in local development, not on Vercel

# The following APIs require local filesystem access:
# - /api/workspace/analyze (project analysis)
# - /api/workspace/files (file browser)
# - /api/workspace/git (git operations)
# - /api/workspace/vscode (VS Code integration)
# - /api/workspace/tests (test runner)
#
# These are disabled in production by default.
# For full workspace features, run locally or use the desktop app.
