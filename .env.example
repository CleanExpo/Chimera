# ===========================================
# CHIMERA - DIGITAL COMMAND CENTER
# ===========================================
# Environment configuration for autonomous AI operations
# See VISION.md for architecture details

PROJECT_NAME=chimera
NODE_ENV=development

# ===========================================
# SUPABASE (Database & Auth)
# ===========================================
# Get these from: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ===========================================
# AI MODELS - MULTI-AGENT ORCHESTRATION
# ===========================================
# These power the Team Channels in the Digital Command Center

# --- Team Anthropic (Claude) ---
# Primary intelligence layer - Orchestrator and Workers
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxx

# Model Selection (used by orchestrator)
# Options: claude-opus-4-5-20251101, claude-sonnet-4-5-20250929, claude-haiku-3-5-20241022
ANTHROPIC_ORCHESTRATOR_MODEL=claude-opus-4-5-20251101
ANTHROPIC_WORKER_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_MONITOR_MODEL=claude-haiku-3-5-20241022

# --- Team Google (Gemini) ---
# Alternative generation for diversity
# Get key from: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=xxx
GOOGLE_MODEL=gemini-2.0-flash

# --- OpenRouter (Multi-model routing) ---
# Flexibility for model selection
# Get key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-xxx

# ===========================================
# MCP TOOLS (Agent Capabilities)
# ===========================================

# Exa - Web Search & Research
# Get key from: https://exa.ai/
EXA_API_KEY=xxx

# Ref.tools - Documentation Lookup
# Get key from: https://ref.tools/
REF_TOOLS_API_KEY=xxx

# Playwright - Browser Automation (no key needed, uses local browser)

# ===========================================
# BACKEND API
# ===========================================
BACKEND_URL=http://localhost:8000
BACKEND_API_KEY=your-internal-api-key

# ===========================================
# REAL-TIME FEATURES
# ===========================================
# WebSocket configuration for live thought streams
WEBSOCKET_URL=ws://localhost:8000/ws
ENABLE_REALTIME=true

# ===========================================
# OBSERVABILITY (Phase 6)
# ===========================================
# Langfuse - Agent tracing and analytics
# Get keys from: https://langfuse.com/
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_SECRET_KEY=sk-lf-xxx
LANGFUSE_HOST=https://cloud.langfuse.com

# ===========================================
# SELF-HEALING CONFIGURATION
# ===========================================
# Tiered Autonomy Settings (see VISION.md)
# Tier 1: Auto-fix (confidence > 0.95)
# Tier 2: Notify-then-execute (confidence > 0.80)
# Tier 3: Approval required (anything else)
AUTOFIX_CONFIDENCE_THRESHOLD=0.95
NOTIFY_CONFIDENCE_THRESHOLD=0.80

# ===========================================
# DEPLOYMENT
# ===========================================
# Vercel (Frontend)
VERCEL_TOKEN=xxx

# DigitalOcean (Backend)
DO_APP_ID=your-app-id
DO_API_TOKEN=your-do-token
